{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake -G Ninja -DWIN32=1 ..",
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "ninja",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}